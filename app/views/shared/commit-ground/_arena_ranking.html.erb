<div class="card small dashboard">
  <div class="card-body">
    <div class="d-inline-flex">
      <h5 class="card-title light-gray">Classement</h5>
    </div>
    <div class="list-group-flush">
      <% @arena_players.each_with_index do |arena_player, index| %>
        <%= link_to arena_path(arena_player.arena, player_id: arena_player.id), class: 'list-group-item list-group-item-action d-flex justify-content-between align-items-center' do %>
          <div class="d-inline-flex mt-2">
            <%= image_tag(arena_player.user.avatar_url, alt: arena_player.user.pseudo, class: "rounded-circle me-3", style: "width: 40px; height: 40px;") %>
            <div class="d-block-flex">
              <p><%= arena_player.user.pseudo %> </p>
              <small class="text-muted">Score: <%= arena_player.score %> pts</small>
            </div>
          </div>
          <span class="badge bg-primary rounded-pill"><%= index + 1 %></span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
