<div class="card large dashboard" data-controller="chatroom-subscription" data-chatroom-subscription-chatroom-id-value="<%= @arena.chatroom.id %>">
  <div id="messages" data-chatroom-subscription-target="messages">
    <% @arena.chatroom.messages.each do |message| %>
      <%= render "messages/message", message: message %>
    <% end %>
  </div>

  <%= simple_form_for [@arena, @arena.chatroom, Message.new], url: arena_chatroom_messages_path(@arena), html: { data: { action: "turbo:submit-end->chatroom-subscription#resetForm" }, class: "d-flex" } do |f| %>
    <%= f.input :content,
      label: false,
      placeholder: "Message ##{@arena.chatroom.name}",
      input_html: { class: "text-dark" },
      wrapper_html: { class: "flex-grow-1" }
    %>
    <%= f.submit "Send", class: "btn btn-primary mb-3" %>
  <% end %>
</div>
