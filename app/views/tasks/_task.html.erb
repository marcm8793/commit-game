<div id="task_<%= task.id %>" class="task-item mt-2" data-controller="task" data-task-task-id-value="<%= task.id %>" data-task-target="task">
  <div class="form-check">
    <input class="form-check-input" type="checkbox" value="" id="task<%= task.id %>" <%= 'checked' if task.done %> disabled>
    <label class="form-check-label <%= 'text-decoration-line-through' if task.done %>" for="task<%= task.id %>">
      <%= task.name %> - <%= task.score %> pts
    </label>
    <i class="fa fa-check text-success ml-2 <%= 'd-none' unless task.done %>"></i>
  </div>
  <p><%= task.description %></p>
</div>
