<div class="card small dashboard">
  <div class="card-body">
    <div class="d-inline-flex">
      <h5 class="card-title light-gray">>&nbsp;</h5>
      <h5 class="card-title lightblue">Range</h5>
      <h5 class="card-title light-gray">: :</h5>
      <h5 class="card-title orange">new</h5>
    </div>
    <div class="list-group">
      <% @arena_players.each_with_index do |arena_player, index| %>
        <%= link_to arena_path(arena_player.arena, player_id: arena_player.id), class: 'list-group-item list-group-item-action d-flex justify-content-between align-items-center' do %>
          <div class="d-flex align-items-center">
            <%= image_tag(arena_player.user.avatar_url, alt: arena_player.user.pseudo, class: "rounded-circle me-3", style: "width: 50px; height: 50px;") %>
            <div>
              <h5 class="mb-0"><%= arena_player.user.pseudo %></h5>
              <small class="text-muted">Rank: <%= index + 1 %> - Score: <%= arena_player.score %> pts</small>
            </div>
          </div>
          <span class="badge bg-primary rounded-pill"><%= index + 1 %></span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
